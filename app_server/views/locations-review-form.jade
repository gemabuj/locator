extends layout

block content
  .row.page-header
    .col-lg-12
      h1 Review The Captain

  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action='/location', method='get', role='form')

        .form-group
          label.col-xs-12.col-sm-2.control-label(for='name') Name
          .col-xs-12.col-sm-10
            input#name.form-control(name='name')

        .form-group
          label.col-xs-12.col-sm-2.control-label(for='rating') Rating
          .col-xs-12.col-sm-3
            select#rating.form-control.input-sm(name='rating')
              option 5 stars
              option 4 stars
              option 3 stars
              option 2 stars
              option 1 stars

        .form-group
          label.col-xs-12.col-sm-2.control-label(for='review') Review
          .col-xs-12.col-sm-10
            textarea#review.form-control(name='review', rows='5')

        button.btn.btn-default.pull-right Send Review